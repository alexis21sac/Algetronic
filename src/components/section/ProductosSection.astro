---
import { productos } from "../../data/productos";
import CarruselProductos from "../CarruselProductos.astro";

const carruselProductos = [...productos, ...productos];

---


<section class="pt-32">
    <div class="text-center mb-16">
        <h3 class="text-[#143549] text-6xl font-semibold">
          Nuestros <span class="font-light text-white">Productos</span>
        </h3>
    </div>
    <article class="overflow-hidden">
        <div class="flex animate-scroll">
            {
              carruselProductos.map((producto) => (
                <CarruselProductos producto={producto} />
              ))
            }
        </div>
    </article>
</section>
<style>
    @keyframes scroll {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(calc(-400px * 5 - 0.5rem * 10));
      }
    }
    .animate-scroll {
      animation: scroll 30s linear infinite;
    }
    .animate-scroll:hover {
      animation-play-state: paused;
    }
  </style>